<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.franklin.conference.fragment.EstablishFragment">


    <Button
        android:id="@+id/establish_btn_create"
        android:layout_width="wrap_content"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="39dp"
        android:text="发布会议" />

    <TextView
        android:id="@+id/establish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="43dp"
        android:text="会议名称" />

    <TextView
        android:id="@+id/establish_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/establish_edit_container"
        android:layout_alignStart="@+id/establish_name"
        android:text="会议内容" />

    <TextView
        android:id="@+id/establish_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/establish_name"
        android:layout_alignTop="@+id/establish_edit_place"
        android:text="会议地点" />

    <TextView
        android:id="@+id/establish_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/establish_name"
        android:layout_marginTop="242dp"
        android:text="会议类型" />

    <TextView
        android:id="@+id/establish_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/establish_name"
        android:layout_marginBottom="220dp"
        android:text="会议时间" />

    <EditText
        android:id="@+id/establish_edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="31dp"
        android:ems="10"
        android:inputType="text"
       android:hint="在此填写" />

    <EditText
        android:id="@+id/establish_edit_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/establish_edit_name"
        android:layout_marginTop="112dp"
        android:ems="10"
        android:inputType="text"
        android:hint="在此填写" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/establish_edit_place"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/establish_edit_name"
        android:layout_alignParentTop="true"
        android:layout_marginTop="185dp"
        android:entries="@array/place">

    </android.support.v7.widget.AppCompatSpinner>

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/establish_edit_type"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/establish_edit_name"
        android:layout_alignTop="@+id/establish_type"
        android:entries="@array/type">

    </android.support.v7.widget.AppCompatSpinner>

    <TextView
        android:id="@+id/establish_edit_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/establish_edit_type"
        android:layout_alignTop="@+id/establish_time"
        android:ems="10"
        android:text="选择时间" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="131dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="150dp"
        android:layout_marginEnd="69dp"
        android:text="会议公开" />


</RelativeLayout>
